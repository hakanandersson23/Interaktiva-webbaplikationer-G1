@model ProjektGruppF.Models.language

@{
    ViewBag.Title = "Add your languages ";
    Layout = "~/Views/Shared/_FreelancerLayout.cshtml";
}
<h2 style="margin-top: 3%; margin-bottom: 3%;">What languages do you speak?</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.language_id)

        <div class="form-group">
            <h6>Write all languages with a comma as a separator</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. swedish, english, spanish..." } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" onclick="return confirm('Are you sure you want to save?')" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Edit")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    
}