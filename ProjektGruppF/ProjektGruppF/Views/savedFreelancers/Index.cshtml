@model List<ProjektGruppF.ViewModels.SavedFreelancersVM>

<h2>These are your saved freelancers</h2>

<p>Filter your search by choosing desired skill, expertise or rank in the drop-down boxes below.</p>
<select id="leftSelect">
    @foreach (var item in Model)
    {
        <option value="allSkills">@item.Skillname</option>
    }
</select>

<select id="centerSelect">
    
    <option value="programming">C#</option>
    
    @*<option value="webDeveloping">Web developer</option>
    <option value="databases">Database administrator</option>
    <option value="mobile_application_developing">Mobile application developer</option>
    <option value="usability_testing">Usability expert</option>
    <option value="logo_designing">Logo designer</option>*@
</select>

<select id="rightSelect">
    <option value="five">5</option>
    <option value="four">4</option>
    <option value="three">3</option>
    <option value="two">2</option>
    <option value="one">1</option>
</select>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3">
            <div class="card" style=" background:yellow; border: 1px solid rgba(0,0,0,.125); border-radius:.25rem; margin-top: 5%; margin-bottom: 5%;">
                <img src="" class="card-img-top" alt="A picture of the freelancer">
                <div class="card-body" style="padding:1.25rem; background:lightblue;">
                    <h5 class="card-title">@item.Firstname.ToUpper() @item.Lastname.ToUpper()</h5>
                    <p class="card-text">
                        Adress: @item.Adress  <br>
                        Phonenumber: @item.Phonenumber  <br>
                        Email: @item.Email  <br>
                    </p>
                    <a href="@Url.Action("Index", "viewCV")" class="btn btn-primary">View CV</a>
                </div>
            </div>
        </div>
    }
</div>
