@section scripts {
    <script>
        $(document).ready(function () {
            $("#expertise").prop("disabled", true);
            $("#skillsList").change(function () {
                if ($("#skillsList").val() != "All Skills") {
                    var options = {};
                    options.url = "/savedFreelancers/GetExpertises";
                    options.type = "POST";
                    options.data = JSON.stringify({ skills: $("#skillsList").val() });
                    options.dataType = "json";
                    options.contentType = "application/json";
                    options.success = function (expertise) {
                        $("#expertise").empty();
                        for (var i = 0; i < expertise.length; i++) {
                            $("#expertise").append("<option>" + expertise[i] + "</option>");
                        }
                        $("#expertise").prop("disabled", false);
                    };
                    options.error = function () { alert("Error retrieving expertises!"); };
                    $.ajax(options);
                }
                else {
                    $("#expertise").empty();
                    $("#rank").empty();
                    $("#expertise").prop("disabled", true);
                    $("#rank").prop("disabled", true);
                }
            });
        });

        $(document).ready(function () {
            $("#rank").prop("disabled", true);
            $("#expertise").change(function () {
                if ($("#expertise").val() != null) {
                    var options = {};
                    options.url = "/savedFreelancers/GetRanks";
                    options.type = "POST";
                    options.data = JSON.stringify({ expertises: $("#expertise").val() });
                    options.dataType = "json";
                    options.contentType = "application/json";
                    options.success = function (rank) {
                        $("#rank").empty();
                        for (var i = 0; i < rank.length; i++) {
                            $("#rank").append("<option>" + rank[i] + "</option>");
                        }
                        $("#rank").prop("disabled", false);
                    };
                    options.error = function () { alert("Error retrieving ranks!"); };
                    $.ajax(options);
                }
                else {
                    $("#rank").empty();
                    $("#rank").prop("disabled", true);
                }
            });
        });

        $('select').on('change', function () {
            $('.myInput').val($(this).val());
        });

        $(document).ready(function () {
            $(".myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchField *").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

